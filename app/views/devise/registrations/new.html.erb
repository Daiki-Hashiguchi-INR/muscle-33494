<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%= render partial: 'shared/error_messages', locals: { model: f.object } %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :encrypted_password, "パスワード再入力" %><br />
          <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><br />
          <%= f.text_field :nickname, placeholder: :例）みかん大好き %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, placeholder: :例）大学３年生、趣味はサイクリングと読書です。宜しく！ , class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :goal, "目標" %><br />
          <%= f.text_area :goal, placeholder: :例）体重マイナス３kg！！ , class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>